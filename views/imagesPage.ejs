<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

	<link rel="stylesheet"  type="text/css" href="style.css">
    <title>Setu Backend</title>
  </head>
  <body>
	  <div class="form-div" style="margin:20px;padding:20px">
		<form class="row g-3" action="/" method="POST" enctype="multipart/form-data" autocomplete="off">
			<div class="col-md-6">
			  <label for="productName" class="form-label">Product Name</label>
			  <input type="text" class="form-control" id="productName" value="" name="productName" required>
			</div>
			<div class="col-md-6">
			  <label for="productCode" class="form-label">Product Code</label>
			  <input type="text" class="form-control" id="productCode" value="" name="productCode" required>
			</div>
			<div class="col-md-12">
				<label for="productCategory" class="form-label">Select Product Category</label>
				<select id="productCategory" name="productCategory" value="" class="form-select" required>
				  <option selected>Choose...</option>
				  <option>Kitchen</option>
				  <option>Bathroom</option>
				</select>
			  </div>
			<div class="col-6">
			  <label for="productHeight" class="form-label">Product Height</label>
			  <input type="number" class="form-control" id="productHeight" value="" name="productHeight" placeholder="Product Height" required>
			</div>
			<div class="col-md-6">
			  <label for="productWidth" class="form-label">Product Width</label>
			  <input type="number" class="form-control" id="productWidth" value="" name="productWidth">
			</div>

			<div class="col-6">
				<label for="productCostPrice" class="form-label">Cost Price</label>
			  <input type="number" class="form-control" id="productCostPrice"  name="productCostPrice" placeholder="Product Cost Price" required>
			  </div>
			  <div class="col-md-6">
				<label for="productRetailingPrice" class="form-label">Retailing Price</label>
			  <input type="number" class="form-control" id="productRetailingPrice"  name="productRetailingPrice" required>
			  </div>
			
			<div class="col-md-12">
			  <label for="additionalComment" class="form-label">Additional Comment</label>
			  <input type="text" class="form-control" id="additionalComment" value="" name="additionalComment" required>
			</div>

			<div class="col-md-12">
				<label for="productImage">Select Product Image</label>
				<input type="file" class="form-control-file" id="productImage" value="" name="productImage" accept="image/*" multiple="multiple">
			  </div>

			
			<div class="col-12">
			  <button type="submit" class="btn btn-primary">Submit</button>
			</div>
		  </form>
	  </div>
    <!-- Optional JavaScript; choose one of the two! -->

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

